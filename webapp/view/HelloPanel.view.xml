<mvc:View controllerName="sap.ui.demo.walkthrough.controller.HelloPanel"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m" displayBlock="true" height="100%" busyIndicatorDelay="0">

    <Panel headerText="{i18n>helloPanelTitle}" class="sapUiResponsiveMargin" width="auto">
        <content class="myCustomContent">

            <Button id="helloDialogButton" text="{i18n>openDiaglogButtonText}" press=".onOpenDialog" class="sapUISmallMarginEnd" icon="sap-icon://world"/>
            <Button text="{i18n>showHelloButtonText}" press=".onShowHello" class="myCustomButton"/>

            <Input value="{/recipient/name}" description="Hello {/recipient/name}" valueLiveUpdate="true" width="60%" />

            <FormattedText htmlText="Hello {/recipient/name}" class="sapUiSmallMarginEnd sapThemeHighlight-asColor myCustomText"/>
        </content>
    </Panel>


</mvc:View>